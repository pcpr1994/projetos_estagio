@page
@using MvcMovie.Web.Pages.Authors
@using MvcMovie.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

@model EditModalModel
@inject IStringLocalizer<MvcMovieResource> L
@{
    Layout = null;
}


<abp-dynamic-form abp-model="Author" asp-page="/Authors/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value">

        </abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">

        </abp-modal-footer>

    </abp-modal>
</abp-dynamic-form>