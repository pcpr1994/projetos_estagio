@page
@using MvcMovie.Localization
@using MvcMovie.Web.Pages.Genres
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

@model MvcMovie.Web.Pages.Genres.CreateModalModel
@inject IStringLocalizer<MvcMovieResource> L
@{
    Layout = null;
}

<form asp-page="/Genres/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewGenre"].Value"></abp-modal-header>
    <abp-modal-body>
        <abp-input asp-for="Genre.Description"/>
    </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>

    </abp-modal>

</form>
